@model Entities.IdentityUsers.ApplicationUser

@{
    Layout = "~/Views/Shared/Client/_ClientLayout.cshtml";
}


<div class="db-info-wrap">
    <div class="row">
        <div class="col-lg-12">
            <div class="dashboard-box user-form-wrap">
                <h4>User Details</h4>
                @if (ViewBag.NotFoundUsername != null)
                {
                    <h2>Unable to find User with username: @ViewBag.NotFoundUsername</h2>
                }
                @using (Html.BeginForm("EditUser", "AdminDashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.Id)
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>User name</label>
                                @Html.EditorFor(model => model.UserName)
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>First name</label>
                                @Html.EditorFor(model => model.FirstName)
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Last name</label>
                                @Html.EditorFor(model => model.LastName)
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Email</label>
                                @Html.EditorFor(model => model.Email)
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label>Date of Birth</label>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.Birthday)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <h4>Contact Details</h4>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Country</label>
                                @Html.EditorFor(model => model.Country)
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>City</label>
                                @Html.EditorFor(model => model.City)
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Address</label>
                                @Html.EditorFor(model => model.Address)
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Zip-Code</label>
                                @Html.EditorFor(model => model.ZipCode)
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Phone Number</label>
                                @Html.EditorFor(model => model.PhoneNumber)
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>
