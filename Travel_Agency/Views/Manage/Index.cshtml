@model Travel_Agency.Models.IndexViewModel

@{
    Layout = "~/Views/Shared/Client/_ClientLayout.cshtml";
}
<div id="page" class="full-page">


    <section class="inner-banner-wrap">
        <div class="inner-baner-container" style="background-image: url(../../Content/Images/Backgrounds/wish.jpg);">
            <div class="container">
                <div class="inner-banner-content">
                    <h2 class="inner-title">Change Your Details</h2>
                </div>
            </div>
        </div>
        <div class="inner-shape"></div>
    </section>
    <main id="content" class="site-main">
        <p class="text-success">@ViewBag.StatusMessage</p>

        <dl class="dl-horizontal" style="margin-left:30px;">
            @if (ViewBag.EditedUsername != null)
            {
                <dt>There was a problem with your data</dt>
                <dd>Unable to find User with username: @ViewBag.NotFoundUsername</dd>
            }
            <dt>Password:</dt>
            <dd>
                @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Get))
                {
                    <button type="submit" name="Change your password" class="button-primary">Change your password.</button>
                }
            </dd>

            <dt>Change Details:</dt>
            <dd>
                @using (Html.BeginForm("UserDetails", "Manage", FormMethod.Get))
                {
                    <input type="hidden" name="userName" value="@Model.UserName" />
                    <button type="submit" class="button-primary">Change your details.</button>
                }
            </dd>

            <dt>Add a profile photo:</dt>
            <dd>
                @using (Html.BeginForm("AddPhoto", "Manage", FormMethod.Get))
                {
                    <input type="hidden" name="userName" value="@Model.UserName" />
                    <button type="submit" class="button-primary">Add a profile photo.</button>
                }
            </dd>

