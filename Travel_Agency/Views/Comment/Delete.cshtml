@model Entities.Models.Comment

@{
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}


<div class="db-info-wrap db-package-wrap">

    <h3>Are you sure you want to delete this comment?</h3>
    <div>
        <dl class="dl-horizontal">
            <dd>
                <strong>Your Comment:</strong>
                <br />
                @Html.DisplayFor(model => model.CommentContent)
            </dd>
            <dd>
                <strong>Time posted:</strong>
                <br />
                @Html.DisplayFor(model => model.PostTime)
            </dd>
        </dl>
    </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions" style="position:fixed;top:40%;left:52%">
                <button type="submit" value="Delete" class="btn btn-info btn-danger">Delete</button>
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
   
</div>
