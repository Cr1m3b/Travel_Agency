                            <li>
                                <a href="~/AdminDashboard/Index">Dashboard</a>
                            </li>
                        }


                    </ul>
                </nav>
            </div>
            <!-- This div is only to align the menu bar to the middle  -->
            <div class="header-btn">
            </div>
        </div>
