@model Entities.Models.Package

@{
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<div class="db-info-wrap db-package-wrap">

    <h3>Are you sure you want to delete this package?</h3>
    <div>
        <dl class="dl-horizontal">
            <dd>
                <strong>Package:</strong>
                <br />
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dd>
                <strong>Trip Date:</strong>
                <br />
                @Html.DisplayFor(model => model.TripDate)
            </dd>
            <dd>
                <strong>Price:</strong>
                <br />
                @Html.DisplayFor(model => model.Price)
            </dd>
        </dl>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions" style="position:absolute;top:40%;left:2%">
            <button type="submit" value="Delete" class="btn btn-info btn-danger">Delete</button>
            @Html.ActionLink("Back to List", "Index")
        </div>
    }

</div>
