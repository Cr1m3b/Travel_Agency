@model Entities.Models.Package

@{
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<div class="db-info-wrap db-package-wrap">
    <div>
        <div>
            <h4>Are you sure you want to delete this?</h4>
            <h4>Package</h4>
            <hr />
            <h4>Title: @Model.Title</h4>
            <br />
            <h4>Date: @Model.TripDate.ToShortDateString()</h4>
            <br />
            <h4>Price: @Model.Price</h4>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-actions" style="position:absolute;top:40%;">
        <button type="submit" value="Delete" class="btn btn-info btn-danger">Delete</button>
        <a href="/AdminPackage/Index/@Model.PackageId" class="btn btn-info btn-default">Back to List</a>

    </div>
        }

    </div>
</div>
