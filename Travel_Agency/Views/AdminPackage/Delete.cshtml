@model Entities.Models.Package

@{
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<div class="db-info-wrap db-package-wrap">
        <div class="dashboard-box table-opp-color-box">
            <h3>Are you sure you want to delete this?</h3>
            <h4>Package</h4>
            <hr />
            <h3>Title: @Model.Title</h3>
            <br />
            <h3>Date: @Model.TripDate.ToString("dd/MM/yyyy")</h3>
            <br />
            <h3>Price: @Model.Price</h3>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

        <div class="form-actions" style="position:absolute;top:40%;left:2%">
            <button type="submit" value="Delete" class="btn btn-info btn-danger">Delete</button>
            @Html.ActionLink("Back to List", "Index")
        </div>
    }

</div>
