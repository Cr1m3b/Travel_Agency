@model Entities.Models.Package

@{
    Layout = "~/Views/Shared/Admin/_AdminLayout.cshtml";
}

<div class="db-info-wrap db-add-tour-wrap">
    <div class="col-lg-12 col-xl-12">
        <!-- start Container Wrapper -->
        @using (Html.BeginForm("Create", "AdminPackage", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <!-- Listings -->

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-lg-12 col-xl-12">
                <div class="dashboard-box">
                    <div class="custom-field-wrap">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Title)
                            @Html.EditorFor(model => model.Title)
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Description)
                            @Html.TextAreaFor(model => model.Description)
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>
                <div class="dashboard-box">
                    <div class="custom-field-wrap">
                        <h4>Dates and Prices</h4>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Destinations)
                                    @Html.EnumDropDownListFor(model => model.Destinations)
                                    @Html.ValidationMessageFor(model => model.Destinations)
                                </div>
                            </div>
                            <div class="col-sm-4">
                                @Html.LabelFor(model => model.TripDate)
                                <div class="row">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.TripDate)
                                        @Html.ValidationMessageFor(model => model.TripDate)
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                @Html.LabelFor(model => model.TripDuration)
                                <div class="row">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.TripDuration)
                                        @Html.ValidationMessageFor(model => model.TripDuration)
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PackageStatus)
                                    @Html.EnumDropDownListFor(model => model.PackageStatus)
                                    @Html.ValidationMessageFor(model => model.PackageStatus)
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Hotel.HotelName)
                                    @Html.DropDownList("HotelId")
                                    @Html.ValidationMessageFor(model => model.HotelId)
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Fly With</label>
                                    @Html.DropDownList("FlightId")
                                    @Html.ValidationMessageFor(model => model.FlightId)
                                </div>
                            </div>
                            <div class="col-sm-2">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Price)
                                    @Html.EditorFor(model => model.Price)
                                    @Html.ValidationMessageFor(model => model.Price)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="dashboard-box">
                    <h4>Main Photo</h4>
                    <div class="custom-field-wrap">
                        <div class="dragable-field">
                            <div class="dragable-field-inner">
                                @*<p class="drag-drop-info">Drop Files To Upload</p>
                                    <p>or</p>*@
                                <div class="upload-input">
                                    <div class="form-group">
                                        <span class="upload-btn">Upload a image</span>
                                        <input type="file" name="packagePhoto">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="dashboard-box">
                    <h4>Gallery</h4>
                    <div class="custom-field-wrap">
                        <div class="dragable-field">
                            <div class="dragable-field-inner">
                                @*<p class="drag-drop-info">Drop Files To Upload</p>
                                    <p>or</p>*@
                                <div class="upload-input">
                                    <div class="form-group">
                                        <span class="upload-btn">Upload a image</span>
                                        <input type="file" name="galleryPhotos" multiple="multiple">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="dashboard-box">
                    <div class="custom-field-wrap">
                        <div class="form-group">
                            <div class="col-md-2 offset-md-5">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Content / End -->

        }
        <!-- end Container Wrapper -->
    </div>
</div>