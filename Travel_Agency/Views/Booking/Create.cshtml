@model Entities.Models.Booking

@{
    Layout = "~/Views/Shared/Client/_ClientLayout.cshtml";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <main id="content" class="site-main">
        <!-- Inner Banner html start-->
        <section class="inner-banner-wrap">
            <div class="inner-baner-container" style="background-image: url(../../Content/Images/Backgrounds/TravelReady.png);">
                <div class="container">
                    <div class="inner-banner-content">
                        <h1 class="inner-title">Booking</h1>
                    </div>
                </div>
            </div>
            <div class="inner-shape"></div>
        </section>
        <!-- Inner Banner html end-->
        <div class="step-section booking-section">
            <div class="container">
                <div class="step-link-wrap">
                    <div class="step-item active">
                        Your cart
                        <a href="#" class="step-icon"></a>
                    </div>
                    <div class="step-item active">
                        Booking Details
                        <a href="#" class="step-icon"></a>
                    </div>
                    <div class="step-item">
                        Finish
                        <a href="#" class="step-icon"></a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-8 right-sidebar">
                        <!-- step one form html start -->
                        <div class="booking-form-wrap">
                            <div class="booking-content">
                                <div class="form-ti\tle">
                                    <span></span>
                                    <h3>Your Details</h3>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>First name*</label>
                                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @Value = ViewBag.User?.FirstName } })
                                            @Html.ValidationMessageFor(model => model.FirstName)
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Last name*</label>
                                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @Value = ViewBag.User?.LastName } })
                                            @Html.ValidationMessageFor(model => model.LastName)
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Email*</label>
                                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @Value = ViewBag.User?.Email } })
                                            @Html.ValidationMessageFor(model => model.Email)
                                        </div>
                                    </div>
                                    @if (ViewBag.User == null)
                                    {
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label>Confirm Email*</label>
                                                @Html.EditorFor(model => model.Email)
                                                @Html.ValidationMessageFor(model => model.Email)
                                            </div>
                                        </div>
                                    }
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Phone*</label>
                                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @Value = ViewBag.User?.PhoneNumber } })
                                            @Html.ValidationMessageFor(model => model.PhoneNumber)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="booking-content">
                                <div class="form-title">
                                    <span>2</span>
                                    <h3>Pay With PayPal</h3>
                                </div>
                                <p>Shop worldwide, shop safely, chekout with confidence with PayPal </p>
                                <input class="button-primary" type="submit" value="Book Now" />

                            </div>
                        </div>
                        <!-- step one form html end -->
                    </div>
                    <div class="col-lg-4">
                        <aside class="sidebar">
                            <div class="widget-bg widget-table-summary">
                                <h4 class="bg-title">Summary</h4>
                                <table>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <strong>Packages cost</strong>
                                            </td>
                                            <td class="text-right">
                                                € @ViewBag.PackageCost
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>Vat</strong>
                                            </td>
                                            <td class="text-right">
                                                11%
                                            </td>
                                        </tr>
                                        <tr class="total">
                                            <td>
                                                <strong>Total cost</strong>
                                            </td>
                                            <td class="text-right">
                                                <strong>€ @ViewBag.PackageCost </strong>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="widget-bg widget-support-wrap">
                                <div class="icon">
                                    <i class="fas fa-phone-volume"></i>
                                </div>
                                <div class="support-content">
                                    <h5>HELP AND SUPPORT</h5>
                                    <a href="telto:12345678" class="phone">+11 234 889 00</a>
                                    <small>Monday to Friday 9.00am - 7.30pm</small>
                                </div>
                            </div>
                        </aside>
                    </div>
                </div>
            </div>
        </div>
    </main>

}
