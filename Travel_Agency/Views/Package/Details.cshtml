                                        </div>
                                    </div>
                                    <div class="tab-pane" id="review" role="tabpanel" aria-labelledby="review-tab">
                                        <div class="summary-review">
                                            <div class="review-score">
                                                <span>4.9</span>
                                            </div>
                                            <div class="review-score-content">
                                                <h3>
                                                    Excellent
                                                    <span>( Based on 24 reviews )</span>
                                                </h3>
                                                <p>Tincidunt iaculis pede mus lobortis hendrerit eveniet impedit aenean mauris qui, pharetra rem doloremque laboris euismod deserunt non, cupiditate, vestibulum.</p>
                                            </div>
                                        </div>
                                        <!-- review comment html -->
                                        <div class="comment-area">
                                            <h3 class="comment-title">@Model.Comments.Count Reviews</h3>
                                            <div class="comment-area-inner">
                                                @foreach (var comment in Model.Comments)
                                                {
                                                    <ol>
                                                        <li>
                                                            <figure class="comment-thumb">
                                                                <img src="assets/images/img22.jpg" alt="">
                                                            </figure>
                                                            <div class="comment-content">
                                                                <div class="comment-header">
                                                                    @*<h5 class="author-name">@comment.ApplicationUser.FirstName</h5>*@
                                                                    <span class="post-on">@comment.PostTime</span>
                                                                    <div class="rating-wrap">
                                                                        <div class="rating-start" title="Rated 5 out of 5">
                                                                            <span></span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <p>@comment.CommentContent</p>
                                                                @*<a href="#" class="reply"><i class="fas fa-reply"></i>Reply</a>*@
                                                            </div>
                                                        </li>
                                                    </ol>
                                                }

                                            </div>
                                            <div class="comment-form-wrap">
                                                <h3 class="comment-title">Leave a Comment</h3>
                                                @using (Html.BeginForm("Create", "Comment", FormMethod.Post))
                                                {
