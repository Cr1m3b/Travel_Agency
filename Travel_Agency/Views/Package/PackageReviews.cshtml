@model IEnumerable<Entities.Models.Package>

@{
    ViewBag.Title = "PackageReviews";
    Layout = "~/Views/Shared/Client/_ClientLayout.cshtml";
}

<div id="page" class="full-page">
    <main id="content" class="site-main">
        <!-- Inner Banner html start-->
        <section class="inner-banner-wrap">
            <div class="inner-baner-container" style="background-image: url(/Content/Images/Backgrounds/Horizont.jpg);">
                <div class="container">
                    <div class="inner-banner-content">
                        <h1 class="inner-title">Tour Packages</h1>
                    </div>
                </div>
            </div>
            <div class="inner-shape"></div>
        </section>
        <!-- Inner Banner html end-->
        <!-- packages html start -->
        <div class="package-section">
            <div class="container">
                <div class="package-inner">
                    <div class="row">
                        @foreach (var package in Model)
                        {
                            <div class="col-lg-4 col-md-6">
                                <div class="package-wrap">
                                    <figure class="feature-image">
                                        <a href="/Package/Details/@package.PackageId">
                                            <img src=@package.MainPhoto style="object-fit:cover; width:365px ;height:305px " alt="">
                                        </a>
                                    </figure>
                                    <div class="package-price">
                                        <h6>
                                            <span>$@package.Price </span> / per person
                                        </h6>
                                    </div>
                                    <div class="package-content-wrap">
                                        <div class="package-meta text-center">
                                            <ul>
                                                <li>
                                                    <i class="far fa-clock"></i>
                                                    @($"{package.TripDate.Day}/{package.TripDate.Month}/{package.TripDate.Year}")
                                                </li>
                                                <li>
                                                    <i class="fas fa-map-marker-alt"></i>
                                                    @package.Destinations
                                                </li>
                                            </ul>
                                        </div>
                                        <div class="package-content">
                                            <h3>
                                                <a href="/Package/Details/@package.PackageId">@package.Title</a>
                                            </h3>
                                            <div class="review-area">
                                                <span class="review-text">(@package.Comments.Count)</span>
                                                <div class="rating-start" title="Rated 5 out of 5">
                                                    <span  style="width: 70%" ></span>
                                                </div>
                                            </div>
                                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit luctus nec ullam. Ut elit tellus, luctus nec ullam elit tellpus.</p>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
        <!-- packages html end -->
    </main>
</div>

