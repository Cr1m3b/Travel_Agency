@model Travel_Agency.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="login-page" style="background-image: url(../../Theme/TravelAgency/admin/assets/images/bg.jpg);">
        <div class="login-from-wrap">

            <h1 class="site-title">
                <a href="~/Home/Index">
                    <img src="~/Theme/TravelAgency/admin/assets/images/logo.png" alt="">
                </a>
            </h1>
            <div class="form-group">
                @Html.LabelFor(model => model.UserName)
                @Html.EditorFor(model =>model.UserName)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email)
                @Html.EditorFor(model => model.Email)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.FirstName)
                @Html.EditorFor(model => model.FirstName)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.LastName)
                @Html.EditorFor(model => model.LastName, new { @placeholder = "plz input date" })
            </div>
            <div class="form-group">
                <label for="Birthdate">Birthday</label>
                <input class="text-box single-line" data-val="true" data-val-required="The Birthday field is required." id="Birthdate" name="Birthdate" type="date" value="">
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password)
                @Html.EditorFor(model => model.Password)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPassword)
                @Html.EditorFor(model => model.ConfirmPassword)
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Register" />
            </div>

        </div>
    </div>
}
